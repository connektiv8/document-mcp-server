# MCP Server Configuration
# Copy to .env and customize

# Server mode: 'stdio' for desktop clients, 'http' for web integration
MCP_MODE=http

# HTTP server port (only used when MCP_MODE=http)
MCP_PORT=8001

# Vector store type: 'faiss' or 'postgres'
STORE_TYPE=faiss

# PostgreSQL settings (only needed if STORE_TYPE=postgres)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=document_mcp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# OpenAI API key for LLM-powered claim parsing
OPENAI_API_KEY=your_api_key_here

# Default region for geocoding
DEFAULT_REGION=Victoria, Australia

# Nominatim user agent (required for geocoding)
NOMINATIM_USER_AGENT=MiningClaimMapper/1.0
